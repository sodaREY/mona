                <Label Content="Введите пароль студента" HorizontalAlignment="Center" FontSize="25" Height="47" Width="294"/>
                <TextBox Name="BarberNameTb1" TextWrapping="Wrap" Text=""  Width="176" Margin=" 0 1 0 1" Height="29"/>
